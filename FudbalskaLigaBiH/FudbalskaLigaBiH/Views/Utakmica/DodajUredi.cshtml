<link rel="stylesheet" href="~/css/StyleSheet.css" />
@model UtakmicaDodajUrediVM

<body>
    <div class="container">
        <div class="row">
            <div class="OkvirUtak" style=" text-align:start; ">
                <form asp-controller="Utakmica" asp-action="Snimi">
                    <input hidden asp-for="@Model.LigaID" />
                        <input hidden asp-for="@Model.UtakmicaID" />
                        <input hidden asp-for="@Model.slikaDomacin" />
                        <input hidden asp-for="@Model.slikaGost" />
                        <div class="form-group">
                            <label>Klub domacin</label>
                            <select class="form-control" asp-for="KlubDomacinID" asp-items="@Model.KlubDomacin"></select>
                        </div>
                        <div class="form-group">
                            <label>Klub gost</label>
                            <select class="form-control" asp-for="KlubGostID" asp-items="@Model.KlubGost"></select>
                        </div>
                        <div class="form-group">
                            <label>Datum i vrijeme odrzavanja</label>
                            <input class="form-control" asp-for="DatumOdrzavanja" />
                        </div>
                    <br />
                    <div class="form-group">
                        <input id="btn1" type="button" class="form-control" onclick="window.location='/Utakmica/Prikaz?tip=0&ligaid=@Model.LigaID'" value="Odustani" />
                        <input id="btn1" type="submit" class="form-control" value="Snimi" />
                    </div>
                </form>
                </div>
            </div>
        </div>
</body>