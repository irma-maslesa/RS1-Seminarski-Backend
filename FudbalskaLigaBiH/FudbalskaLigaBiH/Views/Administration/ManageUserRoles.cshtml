@using FudbalskaLigaBiH.Models

@model List<UserRolesViewModel>

@{ var userId = ViewBag.userId; }

<body>
    <div class="container">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <h3>Upravljaj korisnickim ulogama</h3>
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        if (@Model[i].RoleName != "SuperAdmin")
                        {
                            <div class="form-check m-1">
                                <input type="hidden" asp-for="@Model[i].RoleId" />
                                <input type="hidden" asp-for="@Model[i].RoleName" />
                                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                                <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].RoleName</label>
                            </div>
                       }
                    
                    }

                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-warning">Ažuriraj</button>
                    <a asp-action="EditUser" asp-route-id="@userId" class="btn btn-info">Odustani</a>
                </div>
            </div>
        </form>
    </div>
</body>