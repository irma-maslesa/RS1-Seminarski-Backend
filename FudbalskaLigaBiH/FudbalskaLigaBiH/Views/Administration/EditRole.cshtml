@using FudbalskaLigaBiH.Models

@model EditRoleViewModel

@{ ViewBag.Title = "Edit Role"; }


<body>
    <div class="container">
        <br />
        <h2>Uredi ulogu</h2>

        <form method="post" class="mt-3">
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2 col-form-label">Uloga ID:</label>
                <div class="col-sm-10">
                    <input asp-for="Id" class="form-control align-center" readonly />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RoleName" class="col-sm-2 col-form-label">Naziv uloge:</label>
                <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control align-center" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <button type="submit" class="btn btn-warning">Ažuriraj</button>
                <a asp-action="ListRoles" class="btn btn-info">Odustani</a>
            </div>



            <div class="card">
            <div class="card-header">
                <h3>Korisnik u ovoj ulozi:</h3>
            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                      <h5 class="card-title">@user</h5>
                    }
                 }
                else
                {
                    <h5 class="card-title">Nema korisnika u ovoj ulozi.</h5>
                }
            </div>
            <div class="card-footer">
                <a class="btn btn-outline-warning" asp-action="EditUsersInRole" asp-controller="Administration"
                   asp-route-roleId="@Model.Id">Dodaj/Obriši korisnika</a>
            </div>
        </div>
        </form>
    </div>
</body>
