@model IgracPrikazVM

<body>
    <div class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Ime</th>
                    <th>Prezime</th>
                    <th>Broj dresa</th>
                    <th>Pozicija</th>
                    <th>Klub</th>
                    <th>Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (IgracPrikazVM.IgracRow x in Model.ListaIgraca)
                {
                    <tr>
                        <td>@x.Ime</td>
                        <td>@x.Prezime</td>
                        <td>@x.BrojDresa</td>
                        <td>@x.Pozicija</td>
                        <td>@(@x.KlubNaziv==null?"Nije pridružen klubu":x.KlubNaziv)</td>
                        <td>
                            <a class="btn btn-secondary" href="/Igrac/DodajUredi?id=@x.ID">Uredi</a>
                            <a class="btn btn-secondary" href="/Igrac/Obrisi?id=@x.ID">Obriši</a>
                        </td>
                    </tr>

                }
            </tbody>

        </table>

    </div>
    <br />

</body>