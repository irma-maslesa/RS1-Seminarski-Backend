@model KlubPrikazVM

<body>
    <form>
        <div class="row">
            <div class="input-group col">
                @*<input class="form-control" name="filter" value="@Model.filter" />
                    <div class="input-group-append">
                        <input class="btn btn-outline-secondary rounded" type="submit" value="Pretraži" />
                    </div>*@
                <button class="btn btn-outline-secondary col-6 ml-2" type="button" onclick="DodajKlub()">Dodaj klub</button>
            </div>
        </div>
    </form>

    <br />

    <div id="dodajKlub"></div>

    <br/>
    <table class="table table-hover">
        <thead class="thead-dark text-center">
            <tr>
                <th>Naziv</th>
                <th>Mail</th>
                <th>Adresa</th>
                <th>Trener</th>
                <th>Stadion</th>
                <th>Liga</th>
                <th>Opcije</th>
            </tr>

        </thead>

        <tbody class="text-center">
            @foreach (KlubPrikazVM.Row k in Model.Klubovi)
            {
            <tr>
                <td class="align-middle">@k.Naziv</td>
                <td class="align-middle">@k.Mail</td>
                <td class="align-middle">@k.Adresa</td>
                <td class="align-middle">@k.Trener</td>
                <td class="align-middle">@k.Stadion</td>
                <td class="align-middle">@k.Liga</td>
                <td>
                    <div class="btn-group">
                        <button class="btn btn-outline-primary col mr-1" type="button" onclick="UrediKlub(@k.ID)">Uredi</button>
                        <button class="btn btn-outline-primary col mr-1" type="button" onclick="window.location='/Klub/Obrisi?kID=@k.ID'">Obrisi</button>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <br />

    <div id="urediKlub"></div>
</body>

<script>
    function DodajKlub() {
        var url = "/Klub/DodajUredi?kID=0";

        $.get(url, function (sadrzaj) {
            $("#dodajKlub").html(sadrzaj);
        });
    }

    function UrediKlub(kID) {
        var url = "/Klub/DodajUredi?kID=" + kID;

        $.get(url, function (sadrzaj) {
            $("#urediKlub").html(sadrzaj);
        });
    }

</script>