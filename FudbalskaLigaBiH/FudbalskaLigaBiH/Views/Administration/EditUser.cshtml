@using FudbalskaLigaBiH.Models

@model EditUserViewModel

@{ ViewBag.Title = "Uredi korisnika"; }


<body>
    <div class="container">
        <br />
        <h2>Uredi korisnika</h2>
        <br />

        <form method="post" class="mt-3">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2 col-form-label">Korisnik ID</label>
                <div class="col-sm-10">
                    <input asp-for="Id" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Korisničko ime</label>
                <div class="col-sm-10">
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Ime</label>
                <div class="col-sm-10">
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Prezime</label>
                <div class="col-sm-10">
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Broj telefona</label>
                <div class="col-sm-10">
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-warning">Ažuriraj</button>
                    <a asp-action="ListUsers" class="btn btn-info">Odustani</a>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h3>Uloge korisnika:</h3>
                </div>
                <div class="card-body">
                    @if (Model.Roles.Any())
                    {
                        foreach (var role in Model.Roles)
                        {
                           <h5 class="card-title">@role</h5>
                           
                        }
                    }
                    else
                    {
                         <h5 class="card-title">Nije dodijeljena uloga.</h5>}
                </div>
                <div class="card-footer">
                    <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id" class="btn btn-outline-warning">Upravljaj ulogama</a>
                </div>
            </div>

        </form>
    </div>
</body>
