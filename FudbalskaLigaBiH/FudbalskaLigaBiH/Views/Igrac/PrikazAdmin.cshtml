<link href="~/css/StyleSheet.css" rel="stylesheet" />
@model IgracPrikazVM

<body>
    <div class="btn-group">
        <button type="button" style="outline:none;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Klub</button>
        <div class="dropdown-menu">
            @foreach (var item in Model.klubovi)
            {                
                <a class="dropdown-item" href="/Igrac/Prikaz?filterKlub=@item.Text">@item.Text</a>
            }
        </div>
    </div>
    <div class="container">
        <div class="okvirIgraca">
            <form>
                <div>
                    <input type="text" name="pretrazivac" value="@Model.pretraga" class="inputcss" placeholder="Unesite ime i/ili prezime igrača" />
                    <button class="btn btn-warning " style="width:10%;" type="submit">Traži</button>
                    <button class="btn btn-warning" style="width:10%;" type="button" onclick="window.location='/Igrac/PrikazAdmin'">Reset</button>
                    <button class="btn btn-warning" style="width:15%;position:relative;float:right; margin-right: 55px;" type="button" onclick="window.location='/Igrac/DodajUredi'">Dodaj igrača</button>
                </div>
            </form><br />
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Slika</th>
                        <th>Ime</th>
                        <th>Prezime</th>
                        <th>Broj dresa</th>
                        <th>Pozicija</th>
                        <th>Klub</th>
                        <th>Akcije</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (IgracPrikazVM.IgracRow x in Model.ListaIgraca)
                    {
                        <tr class="Pretraga">
                            <td><img style="width:50px;" src="~/upload/@x.slika" alt="Slika-Igrac" /></td>
                            <td>@x.Ime</td>
                            <td>@x.Prezime</td>
                            <td>@x.BrojDresa</td>
                            <td>@x.Pozicija</td>
                            <td>@(@x.KlubNaziv==null?"Nije pridružen klubu":x.KlubNaziv)</td>
                            <td>
                                <a class="btn btn-warning" href="/Igrac/DodajUredi?id=@x.ID">Uredi</a>
                                <a class="btn btn-warning" href="/Igrac/Obrisi?id=@x.ID">Obriši</a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
    <br />
</body>