@model IgracPrikazVM

<body>
    <div class="btn-group" style="position:relative;top:35px">
        <button class="btn btn-secondary " type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Klub</button>
        <div class="dropdown-menu">
            @foreach (var x in Model.klubovi)
            {
                <a class="dropdown-item" href="/Igrac/PrikazAdmin?klubTxt=@x.Text">@x.Text</a>
            }
        </div>
    </div>
    <div class="container">
        <form>
            <div>
                <input type="text" name="pretrazivac" value="@Model.pretraga" style="width:30%;" placeholder="Unesite ime i/ili prezime igrača" />
                <button class="btn btn-secondary " style="width:10%;" type="submit">Traži</button>
                <button class="btn btn-secondary" style="width:10%;" type="button" onclick="window.location='/Igrac/PrikazAdmin'">Reset</button>
                <button class="btn btn-secondary" style="width:15%;position:relative;float:right;" type="button" onclick="window.location='/Igrac/DodajUredi'">Dodaj igrača</button>
            </div>
        </form><br />
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Ime</th>
                    <th>Prezime</th>
                    <th>Broj dresa</th>
                    <th>Pozicija</th>
                    <th>Klub</th>
                    <th>Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (IgracPrikazVM.IgracRow x in Model.ListaIgraca)
                {
                    <tr class="Pretraga">
                        <td>@x.Ime</td>
                        <td>@x.Prezime</td>
                        <td>@x.BrojDresa</td>
                        <td>@x.Pozicija</td>
                        <td>@(@x.KlubNaziv==null?"Nije pridružen klubu":x.KlubNaziv)</td>
                        <td>
                            <a class="btn btn-secondary" href="/Igrac/DodajUredi?id=@x.ID">Uredi</a>
                            <a class="btn btn-secondary" href="/Igrac/Obrisi?id=@x.ID">Obriši</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <br />
</body>