@using FudbalskaLigaBiH.Models

@model ProfileViewModel

@{ ViewData["Title"] = "Profile";
    var message = TempData["StatusMessage"]; }

<br />
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <h4>Upravljanje računom</h4>
                    <hr />
                    <br />
                    @if (message!=null)
                    {
                        <div>
                            <p>@message</p>
                        </div>
                    }
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input hidden asp-for="UserID" class="form-control" type="text"
                               data-val="true" data-val-required="Ime polje je obavezno." />
                        <label asp-for="FirstName"></label>
                        <input id="FirstName" name="FirstName" asp-for="FirstName" class="form-control" type="text"
                               data-val="true" data-val-required="Ime polje je obavezno." />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input id="LastName" name="LastName" asp-for="LastName" class="form-control" type="text"
                               data-val="true" data-val-required="Prezime polje je obavezno." />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input readonly id="Email" name="Email" asp-for="Email" class="form-control" type="email"
                               data-val="true" data-val-required="Email polje je obavezno." />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>                 
                    <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Snimi</button>
                </form>
            </div>
        </div>
    </div>
</body>