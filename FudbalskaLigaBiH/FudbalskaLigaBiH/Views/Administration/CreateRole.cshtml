@using FudbalskaLigaBiH.Models

@model CreateRoleViewModel


@{ ViewData["Title"] = "Create New Role"; }

<br />

<body>
    <div class="container">
        <h2>Kreiraj novu ulogu</h2>

        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label >Naziv uloge</label>
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Kreiraj ulogu</button>
                </form>
            </div>
        </div>
    </div>
</body>
