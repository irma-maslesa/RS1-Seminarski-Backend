@using FudbalskaLigaBiH.Models

@model List<UserRoleViewModel>

@{ 
    var roleId = ViewBag.roleId;
    var roleName = ViewBag.roleName; 
}
<body>
    <div class="container">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <h3>Dodaj ili obriši korisnika sa '@roleName' ulogom:</h3>
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model[i].UserId" />
                            <input type="hidden" asp-for="@Model[i].UserInfo" />
                            <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                            <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].UserInfo</label>
                        </div>           
                    }
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-warning">Ažuriraj</button>
                    <a asp-action="EditRole" asp-route-id="@roleId " class="btn btn-info">Odustani</a>
                </div>
            </div>
        </form>
    </div>
</body>