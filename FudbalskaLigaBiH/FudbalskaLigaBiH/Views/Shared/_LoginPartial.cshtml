@using Microsoft.AspNetCore.Identity
@using FudbalskaLigaBiH.EntityModels
@inject SignInManager<Korisnik> SignInManager
@inject UserManager<Korisnik> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <img src="~/img/user.png" style="width:30px;height:30px;" />
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="ChangePassword" asp-controller="Account">LOZINKA</a>

        </li>
        <li class="nav-item">
            <form class="form-inline" asp-action="Logout" asp-controller="Account" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">ODJAVA</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Register" asp-controller="Account">REGISTRUJ SE</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Login" asp-controller="Account">PRIJAVI SE</a>
        </li>
    }
</ul>
