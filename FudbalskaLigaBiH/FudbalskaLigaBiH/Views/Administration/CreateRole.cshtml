@using FudbalskaLigaBiH.Models
<link href="~/css/Account.css" rel="stylesheet" />

@model CreateRoleViewModel


@{ ViewData["Title"] = "Create New Role"; }

<br />

<body>
    <div class="container">
        <div class="OkvirLogina">
                    <form method="post">
                      <h2>Kreiraj novu ulogu</h2>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="RoleName" class="form-control" placeholder="Naziv uloge" data-val="true" data-val-required="Naziv uloge je obavezan."/>
                        </div>

                        <button type="submit" class="btn btn-warning">Kreiraj ulogu</button>
                    </form>
                </div>
            </div>
</body>
